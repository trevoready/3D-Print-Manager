<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Jobs List</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@10"></script>
</head>

<body>
    <% include sub-views/navBar %>
        <div class="container">
            <div class="row align-items-start p-2">
                <div class="col-3">
                    <a href="/jobs/add" class="btn btn-primary">Add Job</a>
                </div>
            </div>
        </div>
        <div class="container">
            <table class="table table-sm table-hover table-bordered border-dark">
                <thead>
                    <td>Name</td>
                    <td>Date Added</td>
                    <td>Status</td>
                    <td>EST. Print Time</td>
                    <td>Material</td>
                    <td>Amount</td>
                    <td>Actions</td>
                </thead>
                <tbody>
                    <% for( let index = 0; index < jobs.length; index++ ) { %>
                        <tr>
                            <% let job = jobs[index] %>

                                <td>
                                    <%= job.name %>
                                </td>
                                <td>
                                    <%= job.dateAdded %>
                                </td>
                                <% if (job.status == 1) { %>
                                    <td>In Queue</td>
                                    <% } %>
                                        <% if (job.status == 2) { %>
                                            <td>Printing</td>
                                            <% } %>
                                                <% if (job.status == 3) { %>
                                                    <td>Post Printing</td>
                                                    <% } %>
                                                        <% if (job.status == 4) { %>
                                                            <td>Done</td>
                                                            <% } %>
                                                                <td>
                                                                    <%= job.estPrintTime %>
                                                                </td>
                                                                <td>
                                                                    <%= job.material %> -
                                                                        <%= job.color %>
                                                                </td>
                                                                <td>
                                                                    <%= job.filament %>g</td>
                                                                <td><button id="status" onclick="statusChange('<%= job.jobCode %>')" class="p-1 m-1 btn btn-primary">Change Status</button><button onclick="printLabel('<%= job.jobCode %>','<%= job.name %>','<%= job.filament %>','<%= job.estPrintTime %>')"
                                                                        class="p-1 m-1 btn btn-primary">Print Label</button><button id="status" onclick="deleteJob('<%= job.jobCode %>')" class="p-1 m-1 btn btn-danger">Delete</button></td>
                        </tr>
                        <% } %>
                </tbody>
            </table>
        </div>
        <script>
            function statusChange(jobCode) {
                Swal.fire({
                    title: 'Select field validation',
                    input: 'select',
                    inputOptions: {
                        '1': 'In queue',
                        '2': 'Printing',
                        '3': 'Post Printing',
                        '4': 'Done',
                    },
                    inputPlaceholder: 'Select a Status',
                    showCancelButton: true
                }).then((status) => {
                    console.log(status)
                    if (status.isConfirmed && status.value != "") {
                        let data = {
                            jobCode: jobCode,
                            status: status.value
                        }
                        fetch('/jobs/status-update', {
                            method: 'POST',
                            cache: 'no-cache',
                            credentials: 'same-origin',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify(data)
                        }).then((res) => {
                            return res.json()
                        }).then((res) => {
                            if (res.success) {
                                window.location = '/jobs'
                            }
                        });
                    }
                })


            }
        </script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
</body>

</html>