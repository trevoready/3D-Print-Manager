<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Jobs List</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@10"></script>
</head>

<body>
    <% include sub-views/navBar %>
        <div class="container">
            <div class="row align-items-start p-2">
                <div class="col-3">
                    <a href="/orders/add" class="btn btn-primary">Add Order</a>
                </div>
            </div>
        </div>
        <div class="container">
            <table class="table table-hover">
                <thead>
                    <td>Name</td>
                    <td>Date</td>
                    <td>Date Due</td>
                </thead>
                <tbody>
                    <% for( let index = 0; index < orders.length; index++ ) { %>
                        <tr>
                            <% let order = orders[index] %>

                                <td>
                                    <%= order.orderName %>
                                </td>
                                <td>
                                    <%= order.orderDate %>
                                </td>
                                <td>
                                    <%= order.dueDate %>
                                </td>
                                <td><a id="status" href="" class="p-1 m-1 btn btn-primary">Edit Order</a></td>
                        </tr>
                        <% } %>
                </tbody>
            </table>
        </div>
        <script>
            function statusChange(jobCode) {
                Swal.fire({
                    title: 'Select field validation',
                    input: 'select',
                    inputOptions: {
                        '1': 'In queue',
                        '2': 'Printing',
                        '3': 'Post Printing',
                        '4': 'Done',
                    },
                    inputPlaceholder: 'Select a Status',
                    showCancelButton: true
                }).then((status) => {
                    console.log(status)
                    if (status.isConfirmed && status.value != "") {
                        let data = {
                            jobCode: jobCode,
                            status: status.value
                        }
                        fetch('/jobs/status-update', {
                            method: 'POST',
                            cache: 'no-cache',
                            credentials: 'same-origin',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify(data)
                        }).then((res) => {
                            return res.json()
                        }).then((res) => {
                            if (res.success) {
                                window.location = '/jobs'
                            }
                        });
                    }
                })


            }
        </script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
</body>

</html>